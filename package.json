{
    "name": "svelte-app",
    "version": "1.0.0",
    "scripts": {
        "watch:tailwind": "postcss src/tailwind.css -o public/build/tailwind.css -w",
        "build:tailwind": "NODE_ENV=production postcss src/tailwind.css -o public/build/tailwind.css",
        "build": "concurrently 'npm run build:tailwind' 'rollup -c'",
        "dev": "concurrently 'rollup -c -w' 'npm run watch:tailwind'",
        "start": "sirv public --single",
        "lint": "eslint \"src/**/*.{js,svelte}\"",
        "fix": "eslint --fix \"src/**/*.{js,svelte}\"",
        "format": "prettier --write \"src/**/*.{js,svelte}\""
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-replace": "^2.3.4",
        "babel-eslint": "^10.1.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.12.1",
        "eslint-plugin-svelte3": "^2.7.3",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "postcss-cli": "^8.3.0",
        "prettier": "^2.1.2",
        "prettier-plugin-svelte": "^1.4.1",
        "rollup": "^2.3.4",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-string": "^3.0.0",
        "rollup-plugin-styles": "^3.11.0",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0",
        "tailwindcss": "^2.0.1"
    },
    "dependencies": {
        "highlight.js": "^9.17.1",
        "highlightjs-svelte": "^1.0.6",
        "markdown-it": "^12.0.2",
        "page": "^1.11.6",
        "punycode": "^2.1.1",
        "sirv-cli": "^1.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.svelte": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
